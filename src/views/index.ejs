<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head', {title: 'Inicio'}) %>
<body>
	<!-- Header -->
	<%- include('partials/headerNavbar') %>
	<!-- /Header -->
	
	<!-- Banner -->
	<div class="banner"></div>
	<!-- /Banner -->

	<!-- ultima visita -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Basado en tu Ãºltima visita</h2>
			</div>
			<!-- Show the "visited" products -->
			<% productsVisited.forEach(productVisited => { %>			  
			<div class="col-12 col-sm-6 col-lg-3">
				<section class="product-box">
					<a href="/products/detail/<%=productVisited.id %>">
						<figure class="product-box_image">
							<img src="/images/products/<%=productVisited.image %>" alt="imagen de producto">
						</figure>
						<article class="product-box_data">
							<h2>$ <%=toThousand(productVisited.price) %></h2>
							<% if (productVisited.discount>0) { %>
								<span><%=productVisited.discount %> % OFF</span>
							<% } %>

							<p><%=productVisited.name %></p>
							<i class="fas fa-truck"></i>
						</article>
					</a>
				</section>
			</div>
			<% }) %>

		</div>
	</div>
	<!-- /ultima visita -->

	<!-- Ofertas -->
	
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Ofertas</h2>
			</div>
			<!-- Show the "in-sale" products -->
			<% productsSale.forEach(productSale => { %>
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/products/detail/<%=productSale.id %>">
							<figure class="product-box_image">
								<img src="/images/products/<%=productSale.image %>" alt="imagen de producto">
							</figure>
							<article class="product-box_data">
								<h2>$ <%=toThousand(productSale.price) %></h2>
								<% if (productSale.discount>0) { %>
									<span><%=productSale.discount %> % OFF</span>								 
								<% } %>

								<p><%=productSale.name %></p>
								<i class="fas fa-truck"></i>
							</article>
						</a>
					</section>
				</div>		 
			<% }) %>
		</div>
	</div>
	<!-- /Ofertas -->

	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>	
</html>